<!DOCTYPE html>
<html data-bs-theme="dark">
  <head>
    <title>Collab</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">YouToob</a>
        <div class="navbar-nav">
          <%= header_item("All Videos", "/") %>
          <%= header_item("All Playlists", playlists_path) %>
          <%= header_item("Create Playlist", new_playlist_path) %>
        </div>
      </div>
    </nav>
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= flash_mapper(type) %>">
        <%= msg %>
      </div>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
