<h1>Playlists</h1>
<% if @playlists.empty? %>
  <div>No playlists! Consider making one :)</div>
<% else  %>
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @playlists.each do |playlist| %>
          <div class="col" id="playlist-<%= playlist.id %>">
            <div class="card video-card shadow-sm">
              <div class="card-body">
                <p class="card-text name"><%= playlist.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
<!--                    TODO: need to do one or the other pls-->
                    <%= link_to("Edit", edit_playlist_path(playlist.id), class: "btn btn-sm btn-outline-secondary") %>
                    <%= link_to("View", playlist_path(playlist.id), class: "btn btn-sm btn-outline-secondary") %>
                    <%= link_to("Delete", playlist_path(playlist.id), class: "btn btn-sm btn-outline-secondary", data: { turbo_method: :delete }) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
