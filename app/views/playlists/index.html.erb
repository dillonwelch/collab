<h1>Playlists</h1>
<% if @playlists.empty? %>
  <div>No playlists! Consider making one :)</div>
<% else  %>
  <table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td>
          <%= link_to("Edit", edit_playlist_path(playlist.id)) %>
          <%= link_to("View", playlist_path(playlist.id)) %>
          <%= link_to("Delete", playlist_path(playlist.id), data: { turbo_method: :delete }) %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>